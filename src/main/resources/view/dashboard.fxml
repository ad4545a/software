<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jewellery.erp.controller.DashboardController">
    <center>
        <Label text="Welcome to Jewellery ERP Dashboard">
            <font>
                <Font size="20.0" />
            </font>
        </Label>
    </center>
    <bottom>
        <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="20.0" />
            </BorderPane.margin>
        </Button>
    </bottom>
</BorderPane>
